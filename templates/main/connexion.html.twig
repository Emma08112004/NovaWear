{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="inscription-container">
    <h2 class="inscription-title">Connexion</h2>

    {% if error %}
        <div class="alert alert-danger" style="color: red; font-weight: bold; margin-bottom: 15px;">
            Identifiants incorrects. Veuillez r√©essayer.
        </div>
    {% endif %}

    <form method="post">
        <div class="form-group">
            <label for="email">E-mail :</label>
            <input type="email" id="email" name="email" placeholder="Votre adresse e-mail" value="{{ last_username }}" required>
        </div>
        <div class="form-group">
            <label for="motDePasse">Mot de passe :</label>
            <input type="password" id="motDePasse" name="password" placeholder="Votre mot de passe" required>
        </div>
        <button type="submit" class="inscription-btn">Se connecter</button>
    </form>
</div>
{% endblock %}
