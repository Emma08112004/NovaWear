{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="inscription-container">
    <h2 class="inscription-title">INSCRIPTION</h2>

    {{ form_start(form) }}

        <div class="form-group">
            {{ form_label(form.nom) }}
            {{ form_widget(form.nom, {'attr': {'placeholder': 'Votre nom'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.prenom) }}
            {{ form_widget(form.prenom, {'attr': {'placeholder': 'Votre prénom'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.email) }}
            {{ form_widget(form.email, {'attr': {'placeholder': 'Votre adresse e-mail'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.adresse) }}
            {{ form_widget(form.adresse, {'attr': {'placeholder': 'Votre adresse'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.telephone) }}
            {{ form_widget(form.telephone, {'attr': {'placeholder': 'Votre téléphone'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.motDePasse) }}
            {{ form_widget(form.motDePasse, {'attr': {'placeholder': 'Votre mot de passe'}}) }}
        </div>

        <button type="submit" class="inscription-btn">S'INSCRIRE</button>

    {{ form_end(form) }}
</div>
{% endblock %}
