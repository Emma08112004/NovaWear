{% extends 'base.html.twig' %}

{% block title %}Mes Favoris - NovaWear{% endblock %}

{% block body %}
    <h2>Mes Favoris</h2>
    <ul>
        {% for favori in favoris %}
            <li>
                {{ favori.product.name }} - {{ favori.product.price }}€
            </li>
        {% else %}
            <p>Aucun favori enregistré.</p>
        {% endfor %}
    </ul>
{% endblock %}